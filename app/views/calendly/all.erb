
<h1 class="text-2xl font-bold mb-6">Events for all professionals</h1>

<% if @events.nil? %>
  <p class="text-purple-600">No events found</p>
<% else %>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-purple-400">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b border-purple-200 bg-purple-100 text-left text-xs font-semibold text-purple-600 uppercase tracking-wider">User Name</th>
          <th class="py-2 px-4 border-b border-purple-200 bg-purple-100 text-left text-xs font-semibold text-purple-600 uppercase tracking-wider">Event Name</th>
          <th class="py-2 px-4 border-b border-purple-200 bg-purple-100 text-left text-xs font-semibold text-purple-600 uppercase tracking-wider">Created At</th>
          <th class="py-2 px-4 border-b border-purple-200 bg-purple-100 text-left text-xs font-semibold text-purple-600 uppercase tracking-wider">End Time</th>
          <th class="py-2 px-4 border-b border-purple-200 bg-purple-100 text-left text-xs font-semibold text-purple-600 uppercase tracking-wider">Status</th>

        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr class="hover:bg-purple-200">

            <% if event[:error].present? %>
              <!-- unable to obtain events -->
              <td class="py-2 px-2 border-b border-purple-200"><%= event[:professional_name] %></td>
              <td class="py-2 px-2 border-b border-purple-200"><%= event[:error] %></td>
              <td class="py-2 px-2 border-b border-purple-200">N/A</td>
              <td class="py-2 px-2 border-b border-purple-200">N/A</td>
              <td class="py-2 px-2 border-b border-purple-200">N/A</td>

            <% else %>

              <% if event['event_memberships'].present? %>
                <td class="py-2 px-2 border-b border-purple-200"><%= event['event_memberships'][0]['user_name'] %></td>
              <% else %>
                <td class="py-2 px-2 border-b border-purple-200">No user</td>
              <% end %>
              
              <% if event['name'].present? %>
                <td class="py-2 px-4 border-b border-purple-200"><%= event['name'] %></td>
              <% else %>
                <td class="py-2 px-4 border-b border-purple-200">No event name</td>
              <% end %>

              <% if event['created_at'].present? %>
                <td class="py-2 px-2 border-b border-purple-200"><%= Time.parse(event['created_at']).in_time_zone("America/Argentina/Buenos_Aires").strftime("%Y-%m-%d %H:%M") %></td>
              <% else %>
                <td class="py-2 px-2 border-b border-purple-200">No created at</td>
              <% end %>

              <% if event['end_time'].present? %>
                <td class="py-2 px-2 border-b border-purple-200"><%= Time.parse(event['end_time']).in_time_zone("America/Argentina/Buenos_Aires").strftime("%Y-%m-%d %H:%M") %></td>
              <% else %>
                <td class="py-2 px-2 border-b border-purple-200">No end time</td>
              <% end %>

              <% if event['status'].present? %>
                <td class="py-2 px-2 border-b border-purple-200"><%= event['status'].capitalize %></td>
              <% else %>
                <td class="py-2 px-2 border-b border-purple-200">No status</td>
              <% end %>

            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
