<h1>Events</h1>
<% if @events.empty? %>
  <p>No events found</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Start Time</th>
        <th>Status</th>
        <th>Created At</th>
        <th>End Time</th>
        <th>User Email</th>
        <th>User Name</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event['name'] %></td>
          <td><%= event['start_time'] %></td>
          <td><%= event['status'] %></td>
          <td><%= event['created_at'] %></td>
          <td><%= event['end_time'] %></td>
          <td><%= event['event_memberships'][0]['user_email'] %></td>
          <td><%= event['event_memberships'][0]['user_name'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
